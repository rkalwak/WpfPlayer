<Window x:Class="Wpf_Player.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChartWindow" Height="500" Width="500">
    <Grid Height="453" Width="475">
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="251,401,0,0" Name="cb_chartselector" VerticalAlignment="Top" Width="120" SelectionChanged="cb_chartselector_SelectionChanged" />
        <Image Height="350" HorizontalAlignment="Left" Margin="12,35,0,0" Name="chart" Stretch="Fill" VerticalAlignment="Top" Width="408" />
        <Label Content="Select kind of chart" Height="28" HorizontalAlignment="Left" Margin="117,401,0,0" Name="lb_kindofchart" VerticalAlignment="Top" Width="128" />
        <Label Content="Chart title" Height="28" HorizontalAlignment="Left" Margin="129,6,0,0" Name="lb_charttitle" VerticalAlignment="Top" />
    </Grid>
</Window>
